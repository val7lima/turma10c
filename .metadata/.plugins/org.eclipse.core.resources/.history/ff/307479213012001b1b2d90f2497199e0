		// crie variaveis nome, codigo, valor e qtd
		// exibe nome do producao, total e total 10%
		
		String produto = "Tenis";
		int codigo = 77;
		double valor = 100;
		int qtd = 1;
		double desconto = 0.1;
		double total = qtd*valor;
		
		double totald = valor -(valor * 0.1);
		
		System.out.println("Nome do Produto: " +produto);
