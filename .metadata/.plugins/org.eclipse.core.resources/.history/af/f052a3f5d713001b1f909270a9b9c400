package br.com.casageral.modelo;

public class Televisao {
	
	String marca ="";
	float valor;
	boolean status;
	int canal;
	int volume;
	
	public void preencherMarcar(String param)
	{
		marca=param.toUpperCase();

	}
	
	public String retornarMarca() {
		return marca; // poderia colocar regra na hora retorno, calculo

	}
	
	
	public void preencherValor(float param) {
		if (param>0) {

			valor = param;
		}
	}

	public float retornarValor() {
		return valor;

	}

	
	public String ligar() {
		status=true;
		return "TV Ligado!";
	}

	public String desligar() {
		status=false;
		return "TV Desligado!";
	}

	
	public boolean retornarStatus() {
		return status;

	}
	

	public void mudarCanal(int param) {
		if (param>0) {

			canal = param;
		}
	}

	
	public int retornarCanal() {
		return canal;

	}
	
	
	public void aumentarVolume(int param) {
		if (param>0) {

			volume = param;
		}
	}

	public void diminuirVolume(int param) {
		if (param>0) {

			volume = param;
		}
	}

	
	public int retornarVolume() {
		return volume;

	}
	

	public String retornarTudo() {
		
		
		return "tudo";

	}

	
	
	
	
	
	
	
	
	
	

	

}
