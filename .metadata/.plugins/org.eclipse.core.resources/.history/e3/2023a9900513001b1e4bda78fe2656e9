package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 * um jogo de advinhacao
		 * o jogador 1 digita um numero inteiro
		 * o jogador 2 tem que advinhar o numero digitado pelo jogador 1
		 * enquando ele nao acertar o jogo continua perguntando o numero
		 * 
		 * etapa2:
		 * acrescente uma contagem de tentativas jogador2, e apresente quantas tentativas 
		 * usou para acerta o numero
		 * 
		 * Etapa 3 
		 * acrescente dicas, para o jogador 2, indicador se o numero que
		 * ele esta tentando advinhar é maior ou menos do que ele chutou
		 * 
		 */
		
//etapa1		
		String jogadorA="";
		String jogadorB="";

		int tentativaA=0;
		int tentativaB=0;

		jogadorA= JOptionPane.showInputDialog("JogadorA, Digite um numero entre 0 a 9");
		
		do {
			jogadorB= JOptionPane.showInputDialog("JogadorB, Digite um numero entre 0 a 9");
		
			tentativaB=tentativaB+1;
		
		}while(jogadorB==jogadorA);
		System.out.println("tentativa do jogadorB: " + tentativaB);

		

	}

}
